---
pagination:
  data: collections.post
  size: 5
  reverse: true
  alias: posts
---
<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Preet's website</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/site.css">
</head>

<body>
  <style>
    h1 {
      font-weight: 300;
      font-size: 20px;
      padding: 0 0 0 16px;
      margin: 0;
    }

    header {
      padding: 12px 16px;
    }

    #userImage {
      display: block;
      border-radius: 50%;
      width: 70px;
      height: 70px;
      box-shadow: 0 3px 3px -2px rgba(0, 0, 0, .2), 0 3px 4px 0 rgba(0, 0, 0, .14), 0 1px 8px 0 rgba(0, 0, 0, .12);
    }

    header .social {
      padding: 6px 0 0 11px;
      line-height: 1;
    }

    header .social>a {
      padding: 2px 5px;
    }

    header .social img {
      display: block;
      height: 28px;
      width: auto;
    }

    section {
      padding: 16px 8px;
      text-align: center;
    }

    main {
      padding: 16px 8px;
      max-width: 600px;
      margin: 0 auto;
    }

    .navlink-bar {
      margin-top: -26px;
    }

    @media(max-width: 600px) {
      h1 {
        padding: 8px 0 0 0;
      }

      header .social {
        padding: 8px 0 0 0;
      }

      #headerMain {
        -ms-flex-direction: row;
        -webkit-flex-direction: row;
        flex-direction: column;
      }

      .navlink-bar {
        margin-top: 8px;
      }
    }
  </style>

  <header>
    <div id="headerMain" class="horizontal layout center">
      <a href="/"><img id="userImage" alt="Preet shihn" src="/stuff/photo.jpg"></a>
      <div class="flex">
        <h1>Preet Shihn</h1>
        <div class="horizontal layout center social">
          <a href="https://twitter.com/preetster" title="Twitter"><img alt="Twitter" src="/stuff/icons/twitter.png"></a>
          <a href="https://github.com/pshihn" title="Githun"><img alt="Github" src="/stuff/icons/github.png"></a>
          <a href="" title="RSS"><img alt="RSS" src="/stuff/icons/rss.png"></a>
        </div>
      </div>
      <div class="horizontal layout center navlink-bar">
        <a class="navlink" href="/posts">Writings</a>
        <a class="navlink" href="/creations">Creations</a>
        <a class="navlink" href="/about">About</a>
      </div>
    </div>
  </header>
  <main>
  {% for post in posts %}
  <a class="card-link" href="{{ post.url | url }}">
    <article class="cardpost horizontal layout" style="--card-bg:{{ post.data.themebg }}; --card-fg:{{ post.data.themefg }};">
      <div class="card-image" style="background-image: url({{ post.data.image }});">
        <div class="card-gradient"></div>
      </div>
      <div class="flex card-content">
        <div class="card-title">{{ post.data.title }}</div>
        <div class="card-description">
          {{ post.data.description }}
        </div>
        <div class="horizontal layout center card-footer">
          <time class="flex" datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
        </div>
      </div>
    </article>
  </a>
  {% endfor %}
  </main>
  <section>
    <div class="creations-panel horizontal layout center wrap">
    {% for post in collections.creation | reverse %}
      <article class="horizontal layout creation-card" style="--card-bg:{{ post.data.themebg }}; --card-fg:{{ post.data.themefg }};">
        <a class="creation-card-image-cell card-link" href="{{ post.url | url }}">
          <div class="creation-card-image horizontal layout center" style="background-image: url({{ post.data.image }});">
            <div class="creation-card-title"><h2>{{ post.data.title }}</h2></div>
          </div>
        </a>
        <div class="creation-card-spacer"></div>
        <a class="creation-card-text-cell card-link" href="{{ post.url | url }}">
          <div class="creation-card-text horizontal layout center">
            <span>{{ post.data.description }}</span>
          </div>
        </a>
      </article>
    {% endfor %}
    </div>
  </section>
</body>

</html>
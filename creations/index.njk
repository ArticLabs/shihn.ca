---
layout: content-base-layout.njk
pagination:
  data: links
  size: 500
  reverse: true
  alias: links
---
<style>
main {
  padding: 32px 8px 48px;
  max-width: 100%;
  margin: 0 auto;
  background: none;
  color: white;
  box-sizing: border-box;
  box-shadow: none;
  text-align: center;
  max-width: 1130px;
}
@media(max-width: 600px) {
  main {
    padding: 16px 8px 32px;
  }
}
</style>

<div class="creations-panel horizontal layout center wrap">
{% for post in links %}
  <article class="creation-card" style="{{ post.themebg | transparentize }} --card-fg:{{ post.themefg }}; background-image: url({{ post.image }});">
    <div class="creation-card-glass"></div>
    <a class="card-link" href="{{ post.url | url }}" aria-label="Read more about {{ post.title }}">
      <div class="card-title">{{ post.title }}</div>
      <div class="card-description">{{ post.description }}</div>
    </a>
  </article>
{% endfor %}
</div>